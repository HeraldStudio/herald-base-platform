<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
">
    <bean name="sessionServiceFactory" class="cn.edu.seu.herald.session.SessionServiceFactory" factory-method="getInstance" />

    <bean name="sessionService" class="cn.edu.seu.herald.session.SessionService" factory-bean="sessionServiceFactory" factory-method="getSessionService" />

    <bean name="studentUserAccountService" class="cn.edu.seu.herald.sso.core.impl.StudentUserAccountServiceImpl" />

    <bean name="singleSignOnSessionService" class="cn.edu.seu.herald.sso.core.impl.SingleSignOnSessionServiceImpl">
        <constructor-arg ref="sessionService" />
    </bean>
</beans>
