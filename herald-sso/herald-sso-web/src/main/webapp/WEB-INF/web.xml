<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
    <context-param>
        <param-name>cn.edu.seu.herald.session.sessionServiceUrl</param-name>
        <param-value>http://localhost/sessionservice</param-value>
    </context-param>
    <listener>
        <listener-class>cn.edu.seu.herald.sso.web.SingleSignOnContextListener</listener-class>
    </listener>
    <filter>
        <filter-name>characterEncodingFilter</filter-name>
        <filter-class>cn.edu.seu.herald.sso.web.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>characterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <servlet>
        <servlet-name>authenticationDispatcher</servlet-name>
        <servlet-class>cn.edu.seu.herald.sso.web.controller.AuthenticationDispatcher</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>logOutDispatcher</servlet-name>
        <servlet-class>cn.edu.seu.herald.sso.web.controller.LogOutDispatcher</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>authenticationDispatcher</servlet-name>
        <url-pattern>/authentication</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>logOutDispatcher</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
</web-app>
