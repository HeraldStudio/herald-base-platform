<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd
">
    <bean id="propertyConfigurer" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="location" value="classpath:cn/edu/seu/herald/session/herald-memcached-server.properties" />
    </bean>
    
    <bean name="memcachedClientBuilder" class="net.rubyeye.xmemcached.XMemcachedClientBuilder">
        <constructor-arg>
            <list>
                <bean class="java.net.InetSocketAddress">
                    <constructor-arg value="${herald.memcached.server.address}" />
                    <constructor-arg value="${herald.memcached.server.port}" />
                </bean>
            </list>
        </constructor-arg>
        <property name="connectionPoolSize" value="1" />
        <property name="commandFactory">
            <bean class="net.rubyeye.xmemcached.command.BinaryCommandFactory" />
        </property>
        <property name="transcoder">
            <bean class="net.rubyeye.xmemcached.transcoders.SerializingTranscoder" />
        </property>
        <property name="bufferAllocator">
            <bean class="net.rubyeye.xmemcached.buffer.SimpleBufferAllocator" />
        </property>
        <property name="failureMode" value="false" />
    </bean>
    
    <bean name="memcachedClient" factory-bean="memcachedClientBuilder"
          factory-method="build" destroy-method="shutdown" />
    
    <bean name="sessionCacheAccess" class="cn.edu.seu.herald.session.core.impl.SessionCacheAccessImpl">
        <constructor-arg ref="memcachedClient" />
    </bean>
</beans>
